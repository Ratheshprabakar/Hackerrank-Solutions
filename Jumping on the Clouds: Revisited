#include<stdio.h>
int main()
{
    int n,k,i,e=100;
    int c[25];
    scanf("%d%d",&n,&k);
    for(i=0;i<n;i++)
    {
        scanf("%d",&c[i]);
    }
    for(i=0;i<n;i=i+k)
    {
        if(c[i]==1)
        {
            e=e-3;
        }
        else
        {
            e=e-1;
        }
    }
    printf("%d",e);
}
